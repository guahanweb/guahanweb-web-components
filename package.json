{
  "name": "@guahanweb/web-components",
  "version": "1.0.0",
  "description": "Studies in web components and rendering",
  "main": "src/server",
  "scripts": {
    "dev": "npm run build && npm-run-all -p -r -l dev:server watch:js watch:css",
    "dev:server": "NODE_ENV=development ./node_modules/.bin/nodemon --debug --watch src -e .pug,.js src/server.js",
    "start": "NODE_ENV=production node --harmony src/server",
    "watch": "npm-run-all -p -r -l watch:css watch:js",
    "watch:css": "./node_modules/.bin/node-sass --watch --output-style=compressed client/sass/main.scss dist/css/styles.css",
    "watch:js": "./node_modules/.bin/webpack --watch --progress --colors",
    "build": "npm-run-all build:js build:css build:assets",
    "build:assets": "test -e client/public && rsync -av client/public/ dist",
    "build:css": "./node_modules/.bin/node-sass --output-style=compressed client/sass/main.scss dist/css/styles.css",
    "build:js": "./node_modules/.bin/webpack --progress --colors",
    "prebuild": "mkdir -p dist/{js,css,img}",
    "postinstall": "npm run build"
  },
  "author": {
    "name": "Garth Henson",
    "email": "garth@guahanweb.com"
  },
  "license": "MIT",
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.0",
    "babel-preset-airbnb": "^2.3.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.24.1",
    "chai": "^4.0.2",
    "enzyme": "^2.9.0",
    "eslint": "^4.0.0",
    "eslint-plugin-react": "^7.1.0",
    "html-loader": "^0.4.5",
    "jsdom": "^11.0.0",
    "jsx-loader": "^0.13.2",
    "mocha": "^3.4.2",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "nyc": "^11.0.2",
    "react": "^15.6.1",
    "react-addons-test-utils": "^15.6.0",
    "react-dom": "^15.6.1",
    "sinon": "^2.3.5",
    "supertest": "^3.0.0",
    "webpack": "^3.0.0",
    "webpack-dev-server": "^2.5.0"
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "boom": "^5.1.0",
    "hapi": "^16.4.3",
    "hapi-and-healthy": "^5.0.0",
    "inert": "^4.2.0",
    "pug": "^2.0.0-rc.2",
    "react-redux": "^5.0.5",
    "redux": "^3.7.0",
    "request": "^2.81.0",
    "vision": "^4.1.1"
  }
}
